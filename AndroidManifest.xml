<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.gregoorvandiepen.grapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="nl.gregoorvandiepen.grapp.DashboardActivity" >
        </activity>
        <activity
            android:name="nl.gregoorvandiepen.grapp.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nl.gregoorvandiepen.grapp.RecordActivity" >
        </activity>
        <activity
            android:name="nl.gregoorvandiepen.grapp.ListenActivity"
            android:label="@string/title_activity_listen" >
        </activity>
    </application>

</manifest>
